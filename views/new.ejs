<%- include ('partials/header') -%>


    <div class = "container" style="margin-top: 100px;">
        <div class = "row">
            <div class="col-sm-12">
                <h1 style="text-align: center;">Add a New Prospect</h1>
            </div>
            <div class="col-sm-12">
                <div style="width: 50%; margin: 25px auto;">
                <form action="/prospects" method="POST">
                            <div class = "form-group">
                                <label for="firstName">First Name</label>
                                <input class="form-control" type="text" name="firstName" placeholder="" required>
                            </div>
                             <div class = "form-group">
                                <label for="lastName">Last Name</label>
                                <input class="form-control" type="text" name="lastName" placeholder="" required>
                            </div>
                            <div class = "form-group">
                                <label for="emailAddress">Email Address</label>
                                <input class="form-control" type="text" name="emailAddress" placeholder="" required>
                            </div>
                            <div class = "form-group">
                                <!-- <input class="form-control" type="text" name="phoneNumber" placeholder="phone number" required> -->
                                <label for="phoneNumber">Phone</label>
                                <input class="form-control" type="tel" id="phone" name="phoneNumber" placeholder="___-___-____" pattern="^\d{3}-\d{3}-\d{4}$" required>
                            </div>
                            <div class = "form-group">
                                <label for="message">Message</label>
                                <textarea id="textarea" rows="4" class="form-control form-control-lg" name="message" placeholder=""></textarea>
                            </div>
                            <div style="width: 75%; margin: 25px auto">
                            <div class="show-buttons">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <button class="btn btn-lg btn-default btn-success btn-block" type="submit"><i class="far fa-save"></i> Save</a>
                                    </div>
                                    <div class="col-sm-6">
                                        <a class="btn btn-lg btn-default btn-info btn-block" href="/"><i class="fas fa-undo"></i> Cancel</a>
                                    </div>
                                </div>
                            </div>
                            </div>
                </form>
            </div>
            </div>
            
        </div>
    </div>

<%- include ('partials/footer') -%>