<%- include ('partials/header') -%>



<div class = "container" style="margin-top: 100px;">
        <div class = "row">
            <div class="col-sm-12">
                <h1 style="text-align: center;">Edit Prospect</h1>
            </div>
            <div class="col-sm-12">
                <div style="width: 50%; margin: 25px auto;">
                <form action="/prospects/<%= prospect._id %>?_method=PUT" method="POST">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class = "form-group">
                                <label for="firstName">First Name</label>
                                <input class="form-control" id="firstName" name="prospect[firstName]" value="<%= prospect.firstName %>" type="text" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class = "form-group">
                                <label for="lastName">Last Name</label>
                                <input class="form-control" id="lastName" name="prospect[lastName]" value="<%= prospect.lastName %>" type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class = "form-group">
                                <label for="emailAddress">Email</label>
                                <input class="form-control" id="emailAddress" name="prospect[emailAddress]" value="<%= prospect.emailAddress %>" type="text" />
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class = "form-group">
                                <label for="phoneNumber">Phone</label>
                                <input class="form-control" id="phoneNumber" name="prospect[phoneNumber]" value="<%= prospect.phoneNumber %>" type="text" />
                            </div>
                        </div>
                    </div>
                            
                            <div class = "form-group">
                                <label for="message">Message</label>
                                <textarea class="form-control" id="message" name="prospect[message]" rows="5"><%= prospect.message %></textarea>
                            </div>

                            <div style="width: 75%; margin: 25px auto">
                            <div class="show-buttons">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <button class="btn btn-lg btn-default btn-success btn-block" type="submit"><i class="far fa-save"></i> Save</button>
                                    </div>
                                    <div class="col-sm-6">
                                        <a class="btn btn-lg btn-default btn-info btn-block" href="/prospects/<%= prospect._id %>"><i class="fas fa-undo"></i> Cancel</a>
                                    </div>
                                </div>
                            </div>
                            </div>
                </form>
            </div>
            </div>
            </div>
            
            
        </div>
    </div>
    
 

    <%- include ('partials/footer') -%>