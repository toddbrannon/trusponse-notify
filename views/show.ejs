<%- include ('partials/header') -%>

<div class = "container" style="margin-top: 100px;">
        <div class = "row">
            <div class="col-sm-12">
                <h1 style="text-align: center;"><%= prospect.firstName %> <%= prospect.lastName %></h1>
            </div>
            <div class="col-sm-12 show-container">
                <div style="width: 100%; margin: 25px auto;">
                
                <h5>Date: </h5><p><%= prospect.date %></p>
                <h5>Email: </h5><p><%= prospect.emailAddress %></p>
                <h5>Phone: </h5><p><%= prospect.phoneNumber %></p>
                <h5>Message: </h5><p><%= prospect.message %></p>
            </div>
            <div class="col-sm-12 col-action">
                
                <a type="button" class="btn btn-info btn-sm ml-1 mr-1" href="/prospects/<%= prospect._id %>/edit"><i class="far fa-edit"></i> Edit</a>
                <a type="button" class="btn btn-danger btn-sm ml-1 mr-1" href="#myModal" data-toggle="modal"><i class="far fa-trash-alt"></i> Delete</a>
                <a type="button" class="btn btn-return btn-sm ml-1 mr-1" href="/prospects"><i class="fas fa-arrow-left"></i> Back</a>
                                
            </div> 
        </div>
</div>

                        <!-- Modal HTML -->
<div id="myModal" class="modal fade">
	<div class="modal-dialog modal-confirm">
		<div class="modal-content">
			<div class="modal-header">
				<div class="icon-box">
					<i class="far fa-times-circle"></i>
				</div>				
					
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-sub"><h4 class="modal-title">Are you sure?</h4></div>
			<div class="modal-body">
				<p>Do you really want to delete this record? This process cannot be undone.</p>
			</div>
			<div class="modal-footer">
				<form action="/prospects/<%= prospect._id %>?_method=DELETE" method="POST">
				    
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        <button type="button" class="btn btn-sm btn-succss" data-dismiss="modal">Cancel</button>
                </form>
			</div>
		</div>
	</div>
</div>   

<%- include ('partials/footer') -%>

