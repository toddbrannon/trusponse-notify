<%- include ('partials/header') -%>

<div class = "container" style="margin-top: 125px;">
        <div class = "row">
            <div class="col-sm-12">
                <h1 style="text-align: center;"><%= prospect.firstName %> <%= prospect.lastName %></h1>
            </div>
            <div class="col-sm-12">
                <div style="width: 50%; margin: 25px auto;">
                <h5>Date: </h5><p><%= prospect.date %></p>
                <h5>Email: </h5><p><%= prospect.emailAddress %></p>
                <h5>Phone: </h5><p><%= prospect.phoneNumber %></p>
                <h5>Message: </h5><p><%= prospect.message %></p>
                
                <div style="width: 75%; margin: 25px auto">
                <div class="show-buttons">
                    <div class="row">
                    
                    <!-- <div class="col-sm-6">
                    <a class="btn btn-lg btn-default btn-block btn-primary" href="/prospects/<%= prospect._id %>/email"><i class="far fa-envelope"></i> Message</a>
                    </div> -->
                </div>
                </div>
                <div class="show-buttons">
                <div class="row">
                    <div class="col-sm-4">
                        <a class="btn btn-lg btn-default btn-block btn-info" href="/prospects/<%= prospect._id %>/edit"><i class="far fa-edit"></i> Edit</a>
                    </div>
                    <div class="col-sm-4">
                        <a href="#myModal" data-toggle="modal" class="btn btn-lg btn-default btn-block btn-danger"><i class="far fa-trash-alt"></i> Delete</a>
                    </div>
                    <div class="col-sm-4">
                        <a class="btn btn-lg btn-default btn-block btn-return" href="/prospects"><i class="fas fa-arrow-left"></i> Back</a>
                    </div>
                </div>
                </div>
                </div>
                
                
                <!--<p><a href="/prospects" style="font-size: 20px;">Back to List</a></p>-->
                 
    
                </div>
            </div>
            
            
        </div>
</div>

                        <!-- Modal HTML -->
<div id="myModal" class="modal fade">
	<div class="modal-dialog modal-confirm">
		<div class="modal-content">
			<div class="modal-header">
				<div class="icon-box">
					<i class="far fa-times-circle"></i>
				</div>				
					
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-sub"><h4 class="modal-title">Are you sure?</h4></div>
			<div class="modal-body">
				<p>Do you really want to delete this record? This process cannot be undone.</p>
			</div>
			<div class="modal-footer">
				<form action="/prospects/<%= prospect._id %>?_method=DELETE" method="POST">
				    
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                </form>
			</div>
		</div>
	</div>
</div>   

<%- include ('partials/footer') -%>

